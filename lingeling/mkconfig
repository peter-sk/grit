#!/bin/sh

die () {
   echo "*** mkconfig: $*" 1>&2
   exit 1
}

[ -f makefile ] || die "can not find 'makefile'"

cat<<EOF
/**********************************************************/
/* Automatically generated by './mkconfig': do note edit! */
/**********************************************************/
EOF

echo "#define LGL_OS \"`uname -srmn`\""
echo "#define LGL_COMPILED \"`date`\""
cat<<EOF
#define LGL_RELEASED "Fri May  3 19:28:07 CEST 2013"
#define LGL_VERSION "aqw-drup"
#define LGL_ID "10f7e205e65534a659d4f9468c18a3d0b7509ed2"
EOF
